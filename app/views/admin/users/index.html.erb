<h1>管理者画面</h1>

<%= flash[:message] %>

<h2>会員一覧</h2>
<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>ニックネーム</th>
      <th>氏名</th>
      <th>フリガナ</th>
      <th>メールアドレス</th>
      <th>会員ステータス</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.nickname %></td>
      <td><%= user.last_name %>　<%= user.first_name %></td>
      <td><%= user.last_name_kana %>　<%= user.first_name_kana %></td>
      <td><%= user.email %></td>
      <td>
        <% if user.is_deleted == false %>
          有効
        <% else %>
          退会
        <% end %>
      </td>
      <td><%= link_to "ステータスを変更する", admin_users_withdraw_path, method: :patch, date: { confilm: "会員が登録した予定等が削除されます。\n本当に会員ステータスを変更しますか？"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
