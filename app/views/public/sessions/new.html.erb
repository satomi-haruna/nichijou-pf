<h3 class="sessions-title">ログイン</h3>

<div class="flash">
  <%= flash[:message] %>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<table class="sessions">
  <tr>
    <div class="field">
      <th>
        <%= f.label :"ニックネーム" %>
      </th>
      <td>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "表示名", class:"sessions-form" %>
      </td>
    </div>
  </tr>

  <tr>
    <div class="field">
      <th>
        <%= f.label :"メールアドレス" %>
      </th>
      <td>
        <%= f.email_field :email, autocomplete: "email", placeholder: "e-address@sample.jp", class:"sessions-form" %>
      </td>
    </div>
  </tr>

  <tr>
    <div class="field">
      <th>
        <%= f.label :"パスワード" %>
      </th>
      <td>
        <%= f.password_field :password, autocomplete: "current-password", class:"sessions-form" %>
      </td>
    </div>
  </tr>

<!--<% if devise_mapping.rememberable? %>-->
<!--  <div class="field">-->
<!--    <%= f.check_box :remember_me %>-->
<!--    <%= f.label :remember_me %>-->
<!--  </div>-->
<!--<% end %>-->

  <tr>
    <th></th>
    <td>
      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
    </td>
  </tr>
</table>
<% end %>

<div class="log-in float-right">
  <p>初めて利用される方は
    <%= render "public/shared/links" %>
  </p>
</div>

