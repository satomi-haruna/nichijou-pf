<div class="row">
  <h4 class="col-1">
    <%= link_to event_path(@event.id) do %>
      <i class="fas fa-arrow-circle-left"></i>
    <% end %>
  </h4>
  <div class="col-9 title">
    <h3>
      <%= @event.plan_datetime.to_date %>
    </h3>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <%= image_tag "book4.png", class:"diaryimage" %>
    <!--日記投稿-->
    <div class="new-diary">
      <%= form_with model: [@event, @diary] do |f| %>
        <%= f.text_field :simple_diary, placeholder: "ひとこと日記", class: "diary-width" %><br>
        <%= f.text_area :detail, class: "diary-width diary-detail" %><br>
        <button type="submit", class="diary-btn float-right btn btn-success", align="right">
          保存 <i class="fas fa-sd-card"></i>
        </button>
      <% end %>
    </div>
  </div>
  <!--日記一覧-->
  <%= render 'show', event: @event %>
</div>