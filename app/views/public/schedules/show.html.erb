<h1>予定詳細画面</h1>

<div>
  <h3>今日の予定</h3>
  <%= @schedule.plan %>

  <h3>日時</h3>
  <%= @schedule.plan_datetime %>
  <h3>終日フラグ</h3>

  <h3>色をつける</h3>
  <%= @schedule.color_id %>

  <h3>メモ</h3>
  <%= @schedule.memo %>

  <h3>場所</h3>
  <%= @schedule.place %>

  <h3>通知</h3>
  <%= @schedule.is_active %>
</div>

<!--日記表示-->
<div>
  <h3>日記</h3>
  <% @schedule.diaries.each do |diary| %>
    <p><%= @schedule.plan_datetime %></p>
    <%= diary.simple_diary %>
    <%= diary.detail %>
    <!--%= diary.image_id %>-->
    <%= link_to "削除", schedule_diary_path(diary.schedule, diary), method: :delete %>
  <% end %>
</div>
<!--日記投稿-->
<div>
  <h3>日記を書く</h3>
  <h4>日付</h4>
  <%= @schedule.plan_datetime %>
  <%= form_with model: [@schedule, @diary] do |f| %>
    <%= f.text_field :simple_diary, placeholder: "今日を一言で" %><br>
    <%= f.text_area :detail %><br>
    <!--%= image_tag @diary.get_image(100,100) %>-->
    <%= f.submit "保存" %>
  <% end %>
</div>