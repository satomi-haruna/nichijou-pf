<h1>登録情報の編集</h1>

<%= form_with model: @user, url: users_information_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label :"お名前" %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :"ニックネーム" %>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.submit "変更を保存" %>
  </div>
<% end %>

