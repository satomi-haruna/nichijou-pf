<div class="row">
  <div class="col title">
    <h3>
      <%= image_tag 'hitsuji.png', size: '80x80' %>
      登録情報
    </h3>
  </div>
</div>

<div class="row">
  <div class="offset-md-1 col">
    <table class="sessions">
      <tr>
        <th>氏名</th>
        <td>
          <%= @user.last_name %>
          <%= @user.first_name %>
        </td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>
          <%= @user.last_name_kana %>
          <%= @user.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th>ニックネーム</th>
        <td>
          <%= @user.nickname %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td class="float-right users-edit">
          <%= link_to "編集", users_information_edit_path, class:"btn btn-success" %>
        </td>
        <td class="users-edit">
          <%= link_to "退会", users_unsubscribe_path, class:"btn btn-danger" %>
        </td>
      </tr>
    </table>
