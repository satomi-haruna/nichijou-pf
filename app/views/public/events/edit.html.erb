<h1>予定の編集画面</h1>

<%= form_with model: @event, url: event_path(@event.id), method: :patch do |f| %>
  <h3>今日の予定</h3>
  <%= f.text_field :plan %>

  <h3>日時</h3>
  <%= f.text_field :plan_datetime %>
  <h3>終日フラグ</h3>

  <h3>色をつける</h3>
  <%= f.text_field :color_id %>

  <h3>メモ</h3>
  <%= f.text_area :memo %>

  <h3>場所</h3>
  <%= f.text_area :place %>

  <h3>通知</h3>
  <%= f.text_field :is_active%>

  <div class="btn">
    <%= f.submit '保存' %>
  </div>
<% end %>
