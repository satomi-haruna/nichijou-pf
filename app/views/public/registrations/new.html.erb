<h2>新規登録</h2>

<div class="flash">
  <%= flash[:notice] %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"お名前" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "姓" %>
    <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "名" %>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "セイ" %>
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "メイ" %>
  </div>

  <div class="field">
    <%= f.label :ニックネーム %>
    <%= f.text_field :nickname, autocomplete: "nickname", placeholder: "表示名" %><br>
    <span>
      こちらがアカウント内の表示名、ログイン情報として使用されます。
    </span>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "e-address@sample.jp" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div class="log_in">
  <p>すでに登録済みの方は
    <%= render "public/shared/links" %>
  </p>
</div>