<!DOCTYPE html>
<html>
  <head>
    <title>日常のスケジュール日誌</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <li>
          <%= link_to "予定登録", new_schedule_path %>
        </li>
        <li>
          <%= link_to "カレンダー", schedules_path %>
        </li>
        <li>
          <%= link_to "予定一覧", schedules_path %>
        </li>
        <li>
          <%= link_to "会員情報の確認", users_my_page_path %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>
      <% elsif admin_signed_in? %>
        <li>
          <%= link_to "会員一覧", admin_root_path %>
        </li>
        <li>
          <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "予定登録", new_schedule_path %>
        </li>
        <li>
          <%= link_to "カレンダー", schedules_path %>
        </li>
        <li>
          <%= link_to "新規登録", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
      <% end %>
    </header>

    <%= yield %>
  </body>
</html>
